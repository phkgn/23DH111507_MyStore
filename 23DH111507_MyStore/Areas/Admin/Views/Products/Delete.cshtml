@model _23DH111507_MyStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<h2 class="bg-warning">XÓA TRUYỆN</h2>
<h4 class="alert-warning">Xác nhận xóa truyện</h4>
@Html.Partial("PVProdInfo", Model)
<div class="container-fluid">
    <div class="div-horizonal">
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.ProductImage)" />
        </div>
        <div class="col-md-8">
            <dl>
                <dt>Tên sản phẩm</dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>

                <dt>Đơn giá</dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductPrice)
                </dd>

                <dt>Mô tả</dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductDescription)
                </dd>

                <dt>
                    Danh mục
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
                <dt style="padding:10px"></dt>
                <dd style="padding:10px">

                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                <div>


                    @Html.AntiForgeryToken()
                    <input type="submit" value="Xóa" class="btn btn-info" /> |
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary btn-sm" })
                </div>
            }
        </div>
    </div>
</div>

